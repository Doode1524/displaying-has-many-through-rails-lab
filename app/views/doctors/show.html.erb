<%= @doctor.name %><br>
<%= @doctor.department %><br>
<% @doctor.appointments.each do |appointment| %>
    <% @i_patient = @doctor.patients.find(appointment.patient_id) %>
    <%= link_to @i_patient.name, patient_path(@i_patient) %> -
    <%= link_to appointment.appointment_datetime.strftime("%B %d, %Y at %k:%M"), appointment_path(appointment) %><br>
<% end %>
